$widths ?= {
  'full': 100%,
  '1of2': 50%,
  '1of3': calc(1 / 3 * 100%),
  '2of3': calc(2 / 3 * 100%),
  '1of4': 25%,
  '3of4': 75%,
  '1of5': 20%,
  '2of5': 40%,
  '3of5': 60%,
  '4of5': 80%,
};

for $width, $value in $widths
  .u-{$width}
    width: $value !important

  @media (--sp)
    .u-{$width}\@sp
      width: $value !important

  @media (--pc)
    .u-{$width}\@pc
      width: $value !important
