.c-shadow
  display: block;
  height: 10%;
  width: 100%;
  position: fixed;
  z-index: 4;
  left: 0;

  &--top
    top: 0
    background: linear-gradient(to bottom,rgba(22,22,22,0.8) 0%,rgba(22,22,22,0.4) 40%,rgba(22,22,22,0.1) 80%,rgba(22,22,22,0) 100%);
  &--bottom
    bottom: 0;
    background: linear-gradient(to top,rgba(0,0,0,0.8) 0%,rgba(0,0,0,0.4) 40%,rgba(0,0,0,0.1) 80%,rgba(0,0,0,0) 100%);
