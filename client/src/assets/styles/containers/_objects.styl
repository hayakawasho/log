.o-wrapper
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  z-index 1
  overflow hidden

.o-scroll
  height: 100%
  overflow-x hidden
  overflow-y auto
  -webkit-overflow-scrolling touch

.o-container
  padding 0 4.8rem
  width 100%

  @media(--pc)
    padding 0 calc(90 / 1280 * 100%)
    margin 0 auto
